<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.kiosk.Step1.mpornot_coke_answer" android:tag="layout/activity_mpornot_coke_answer_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/mpornotcokeanswer_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mpornot_coke_answer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/qzero"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/qzero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.71"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.375" />

    <ImageButton
        android:id="@+id/minusbtn"
        android:layout_width="wrap_content"
        android:layout_height="18.5dp"
        android:layout_marginEnd="1dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/minusbtn"
        app:layout_constraintBottom_toBottomOf="@+id/qzero"
        app:layout_constraintEnd_toEndOf="@+id/qzero"
        app:layout_constraintHorizontal_bias="0.741"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/qzero" />

    <ImageButton
        android:id="@+id/plusbtn"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/plusbtn"
        app:layout_constraintBottom_toBottomOf="@+id/qzero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.779"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/qzero" />

    <ImageButton
        android:id="@+id/savechange"
        android:layout_width="147dp"
        android:layout_height="33.5dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/savechange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.905" />

    <ImageView
        android:id="@+id/kipoint"
        android:layout_width="59dp"
        android:layout_height="66dp"
        android:layout_marginStart="69dp"
        android:src="@drawable/realpinkkiopoint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.837"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>
         