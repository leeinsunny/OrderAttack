<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.movie.Step1ClearActivity"
    android:background="@color/brown">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/movie1_success_window"
        />

    <!-- 지갑 획득(Step1ClearActivity2) -->
    <Button
        android:id="@+id/btn_get_wallet"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginTop="500dp"
        android:layout_marginStart="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 다시 연습(MovieStep1Activity) -->
    <Button
        android:id="@+id/btn_back_to_practice"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginTop="550dp"
        android:layout_marginStart="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 지도(gameintro)로 돌아가기 -->
    <Button
        android:id="@+id/btn_back_to_map"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginTop="620dp"
        android:layout_marginStart="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>