<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/cinemaBtn"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/real_light_pink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cinemaName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="노원"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="@id/cinemaBtn"
        app:layout_constraintEnd_toEndOf="@id/cinemaBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/cinemaBtn"
        app:layout_constraintTop_toTopOf="@id/cinemaBtn"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/img_touch"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:src="@drawable/img_touch"
        app:layout_constraintStart_toStartOf="@id/cinemaBtn"
        app:layout_constraintTop_toTopOf="@+id/cinemaBtn"
        app:layout_constraintEnd_toEndOf="@id/cinemaBtn"
        app:layout_constraintBottom_toBottomOf="@+id/cinemaBtn"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>