<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/popupBusFirstHelp"
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/popup_bus_first_help"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/popupBusFirst" />

        <ImageView
            android:id="@+id/popupBusFirst"
            android:layout_width="363dp"
            android:layout_height="256dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/popup_bus_first"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/startBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:background="@android:color/transparent"
            android:src="@drawable/start_btn"
            app:layout_constraintTop_toTopOf="@id/popupBusFirst"
            app:layout_constraintStart_toStartOf="@id/popupBusFirst"
            app:layout_constraintEnd_toEndOf="@id/popupBusFirst"
            app:layout_constraintBottom_toBottomOf="@id/popupBusFirst" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>